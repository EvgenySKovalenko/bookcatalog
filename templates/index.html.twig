{% extends 'base.html.twig' %}

{% block title %}Books Catalog{% endblock %}

{% block body %}
    <h1>Add Book</h1>        
    {{ form_start(form_create) }}
    {{ form_widget(form_create) }}
    {{ form_end(form_create) }}
    
    <h1>Latest Books</h1>

    <ul>
        {% for book in books %}
            <li>            
                <strong>{{ book.name }}</strong><br> 
                Author: <a href="">{{ book.author.name }}</a><br>
                Genre: {{ book.genre.name }}<br>
                Published: {{ book.publishdate|date('Y-m-d') }}<br>
                Rating: {{ book.rating }}<br>
                <a href="{{ path('book_edit', {'id': book.id}) }}">EDIT</a> 
                {#<a href="{{ path('genre_delete', {'id': genre.id}) }}">DELETE</a>#}
                <br><br>
            </li>
        {% endfor %}        
    </ul>        
{% endblock %}

